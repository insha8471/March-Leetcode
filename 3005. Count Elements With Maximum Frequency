//Approach : Frequecy count
//Time complexity : O(n)
//Space complexity : O(1) -> the size of the frequency array is fixed it doesn't grow with the input.

class Solution {
    public int maxFrequencyElements(int[] nums) {
        int n = nums.length;

        int[] freq = new int[101];
        for(int i=0;i<n;i++)    
            freq[nums[i]]++;
        
        int result = 0;
        int currFreq = 0;
        for(int i=1;i<101;i++){
            if(freq[i] > currFreq){
                currFreq = freq[i];
                result  = 0;
            }

            if(freq[i] == currFreq){
                result += currFreq;
            }
        }
        return result;
    }
}
